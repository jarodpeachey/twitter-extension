{
  "manifest_version": 2,
  "name": "Material Twitter",
  "version": "1.0.0",
  "description": "A simple theme for Twitter based off of Google's Material Design System",
  "short_name": "Material Twitter",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "cookies",
    "*://*.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": ["css/override.css"],
      "js": ["js/twitter.js"]
    }
  ],
  "browser_action": {
    "default_title": "Customize Material Twitter",
    "default_popup": "popup.html"
  }
}
